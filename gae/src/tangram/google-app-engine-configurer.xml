<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

  <bean id="beanFactory" class="org.tangram.gae.GaeBeanFactory">
    <property name="basePackages">
      <set>
        <value>${bean.factory.application.base.package}</value>
        <value>org.tangram.gae</value>
      </set>
    </property>
    <property name="activateCaching" value="${bean.factory.activate.caching}" />
    <property name="activateQueryCaching" value="${bean.factory.activate.query.caching}" />
    <property name="prefill" value="${tangram.caches.prefill}" />
    <property name="useHdrDatastore" value="${use.hdr.datastore}" />
  </bean>

  <bean id="propertyConverter" class="org.tangram.gae.GaePropertyConverter">
    <property name="dateFormat" value="${tangram.date.format}"/>
  </bean>
  
  <bean id="gaeLogin" class="org.pac4j.gae.client.GaeUserServiceClient">
    <property name="name" value="gae"/>
  </bean>
    
</beans>
