<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        
	<bean id="beanFactory" class="org.tangram.mongo.MongoBeanFactory">
		<property name="basePackages">
			<set>
				<value>${bean.factory.application.base.package}</value>
				<value>org.tangram.mongo</value>
			</set>
		</property>
		<property name="activateCaching" value="${bean.factory.activate.caching}" />
		<property name="activateQueryCaching" value="${bean.factory.activate.query.caching}" />
		<property name="prefill" value="${tangram.caches.prefill}" />
		<property name="host" ref="${tangram.mongo.host}" />
		<property name="port" ref="${tangram.mongo.port}" />
		<property name="database" ref="${tangram.mongo.database}" />
	</bean>

	<!--  edit scenarios only  -->

	<bean id="propertyConverter" class="org.tangram.jdo.JdoPropertyConverter" />
	
</beans>
