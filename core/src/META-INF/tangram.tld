<taglib version="2.0" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-jsptaglibrary_2_0.xsd">
	<tlibversion>1.0</tlibversion>
	<jspversion>2.0</jspversion>
	<shortname>Tangram Core Tags</shortname>
	<uri>http://www.top-tangram.org/tags</uri>
	<info>Tangram Object Presenter Tag Library</info>
	<tag>
		<name>include</name>
		<tagclass>org.tangram.view.jsp.IncludeTag</tagclass>
		<bodycontent>empty</bodycontent>
		<info>Include bean with given view</info>
		<attribute>
			<name>view</name>
			<required>false</required>
		</attribute>
		<attribute>
			<name>bean</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
	<tag>
		<name>link</name>
		<tagclass>org.tangram.view.jsp.LinkTag</tagclass>
		<bodycontent>empty</bodycontent>
		<info>Create link string for given bean with (optional) view</info>
		<attribute>
			<name>bean</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>action</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>view</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>href</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>target</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>handlers</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
	<function>
		<name>contains</name>
		<function-class>org.tangram.view.jsp.Functions</function-class>
		<function-signature>
			boolean contains(java.util.Collection, java.lang.Object)
    </function-signature>
	</function>
</taglib>